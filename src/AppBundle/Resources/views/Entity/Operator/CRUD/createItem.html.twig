{# src/AppBundle/Resources/views/Entity/Operator/CRUD/createItem.html.twig #}
{% extends 'AppBundle:Entity/Operator/Base:item.html.twig' %}

{% block action_top %}
    <div class="inner categories-list-holder">
        <ul>
            <li class="active">
                <a href="{{ path('operator_create') }}">Ввод данных</a>
            </li>
        </ul>
    </div>
{% endblock %}

{% block data %}

    {% include 'AppBundle:Entity/Operator/Form:form.html.twig' with { 'form': form } only %}

{% endblock %}

{% block action_bottom %}
    <div id="action-holder" class="manage-holder">
        <button type="submit" form="operator-form" name="{{ form.create_and_return.vars.full_name }}" class="btn-save back">
            <span>{{ form.create_and_return.vars.label|trans({}, 'forms') }}</span>
        </button>
        <button type="submit" form="operator-form" name="{{ form.create.vars.full_name }}" class="btn-save">
            <span>{{ form.create.vars.label|trans({}, 'forms') }}</span>
        </button>
    </div>
{% endblock %}
